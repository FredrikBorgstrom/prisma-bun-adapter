{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["ES2021"],
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": false,
    "types": ["bun"]
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "test", "test-app"]
}
