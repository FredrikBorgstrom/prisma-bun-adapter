{
  "name": "prisma-bun-adapter",
  "version": "1.0.0",
  "description": "Prisma adapters for Bun's native SQL clients (PostgreSQL, MySQL, SQLite)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:multi": "bun run test-app/multi-adapter-comparison.ts",
    "test:comparison": "bun run test-app/bun-vs-prisma-comparison.ts",
    "test:performance": "bun run test-app/performance-comparison.ts",
    "demo:sqlite": "bun run test-app/sqlite-comparison-demo.ts",
    "demo:quick": "bun run test-app/quick-comparison-demo.ts",
    "setup:dbs": "bun run test-app/setup-test-dbs.ts",
    "setup:dbs:stop": "bun run test-app/setup-test-dbs.ts stop"
  },
  "keywords": ["prisma", "bun", "postgresql", "mysql", "sqlite", "adapter"],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/driver-adapter-utils": "^6.17.1",
    "@types/pg": "^8.15.5",
    "pg": "^8.16.3"
  },
  "optionalDependencies": {
    "@prisma/adapter-pg": "^6.17.1",
    "@prisma/adapter-planetscale": "^6.17.1",
    "mysql2": "^3.6.5",
    "better-sqlite3": "^9.2.2"
  }
}